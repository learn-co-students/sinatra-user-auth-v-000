# A sample Gemfile
source "https://rubygems.org"

gem 'activerecord', '4.2', :require => 'active_record'
gem 'sinatra-activerecord', :require => 'sinatra/activerecord'


gem 'sinatra'

gem 'rake'
gem 'require_all'
gem 'sqlite3'
gem 'thin'
gem 'shotgun'
gem 'pry'

group :test do
  gem 'launchy'
  gem 'rspec'
  gem 'capybara'
  gem 'rack-test'
  gem 'database_cleaner', git: 'https://github.com/bmabey/database_cleaner.git'
end
